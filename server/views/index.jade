extends layout

block content
    header#top.site-header
        nav.navbar.navbar-default.navbar-fixed-top
            .container
                .row
                    .navbar-header
                        button.navbar-toggle.collapsed(type='button', data-toggle='collapse', data-target='.navbar-collapse')
                            i.fa.fa-bars
                        .logo-wrapper
                            a.navbar-brand
                                | CHR
                                em Volunteers
                                span.logo-s

                    #main-menu.collapse.navbar-collapse
                        ul.nav.navbar-nav.navbar-right(ng-controller="navCtrl")
                            li
                                a(href='/#/' ng-hide='adminPath()') Home
                            li
                                a(href='/#/adminCal' ng-show='adminPath()') Home
                            li.dropdown(role="presentation" ng-hide="adminPath()").pull-right
                                a.dropdown-toggle(data-toggle="dropdown", role="button", aria-haspopup="true", aria-expanded="false")
                                    | Admin
                                    span.caret
                                form.dropdown-menu
                                    fieldset.form-group-dropdown
                                        label(for="exampleInputEmail1") Email address
                                        input#exampleInputEmail1.form-control(type="email", placeholder="Enter email")
                                    fieldset.form-group-dropdown
                                        label(for="exampleInputPassword1") Password
                                        input#exampleInputPassword1.form-control(type="password", placeholder="Password")
                                    .checkbox-pass
                                        label
                                            input(type="checkbox")
                                            |  Remember Me
                                            br
                                            a.btn.btn-primary(href="/#/adminCal") Submit
                            li.pull-right
                                a(href='/#/' ng-show="adminPath()") Logout

                        div.space

            .cta
                .container
                    .row
                        .col-md-12
                            ul.nav.nav-pills(ng-controller="navCtrl" ng-show="adminPath()")
                                .row
                                    .col-md-6
                                        li.pull-left
                                            a(href='/#/adminEvent') Create Event
                                    .col-md-4
                                        li.pull-right
                                            a(ng-href='{{volunteerPath()}}' ng-show="showVolunteers()") Event Volunteer Report
                                        li.pull-right
                                            a(href='/#/adminEvent' ng-show="showBack()") Back to Event
                                        li.pull-right
                                            a(href='/#/search' ng-show="showSearch()") Search



    body
        .main-content
            .container
                .main(ng-view)

    footer
      .container
            .row
                .col-md-6.col-sm-6.col-sm-12
                    p.copyright
                        | C.H. Robinson Volunteers

