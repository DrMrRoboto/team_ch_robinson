extends layout

block content
  header
    h1 C.H. Robinson
    h2 Volunteer App
    .nav
      ul
        li
          a(href='/#/') Home
        li.dropdown(role="presentation").pull-right
          a.dropdown-toggle(data-toggle="dropdown", href="/#/", role="button", aria-haspopup="true", aria-expanded="false")
            | Admin
            span.caret
          form.dropdown-menu
            fieldset.form-group
              label(for="exampleInputEmail1") Email address
              input#exampleInputEmail1.form-control(type="email", placeholder="Enter email")
            fieldset.form-group
              label(for="exampleInputPassword1") Password
              input#exampleInputPassword1.form-control(type="password", placeholder="Password")
            .checkbox
              label
                input(type="checkbox")
                | Remember Me
              button.btn.btn-primary(type="submit") Submit
  .main(ng-view)

